{% extends "base.html.twig" %}

{% block title %}Vos demandes de contact pro{% endblock %}

{% block body %}

    <h1>Les demandes de contact pro :</h1>

    <h3>Recherche</h3>
    <form method="GET">
        <div class="d-flex mb-4">
            <input type="text" class="form-control mr-3" name="search" placeholder="Rechercher">
            <button class="btn btn-primary" type="submit">Rechercher</button>
        </div>
    </form>

    {% for contactPro in contactPros %}
        <div class="p-4 mb-4 border rounded">
            Demande de : {{ contactPro.firstname }} {{ contactPro.lastname }} ({{ contactPro.company }})
            - Email : {{ contactPro.email }}
            - <i>le {{ contactPro.createdAt|date('d/m/Y') }}</i>
            <br>
            Sujet : {{ contactPro.subject }} <br>
            Message : <br>
            {{ contactPro.message|raw }}
        </div>
    {% endfor %}

{% endblock %}
